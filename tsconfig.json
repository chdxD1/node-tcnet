{
    "compilerOptions": {
        // Output related
        "target": "es2017",
        "importHelpers": true,
        "sourceMap": true,
        "declaration": true,
        "strictPropertyInitialization": false,
        "strict": true,
        // Module resolution
        "moduleResolution": "node",
        // Type checking
        "lib": [
            "es2017",
        ],
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "CommonJS",
        "types": [
            "node"
        ],
        "outDir": "./dist"
    },
    "compileOnSave": true,
    "include": [
        "src/**/*",
    ]
}